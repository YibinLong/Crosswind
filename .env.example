# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/crosswind"

# Weather API - Get your key from https://www.weatherapi.com/
WEATHER_API_KEY="your_weatherapi_com_key_here"

# OpenAI API - Get your key from https://platform.openai.com/
OPENAI_API_KEY="your_openai_api_key_here"

# Email Configuration (Development - Gmail SMTP)
# Note: You must enable 2-factor authentication on your Gmail account and create an App Password
# Visit https://myaccount.google.com/apppasswords to generate an App Password
EMAIL_SMTP_SERVER="smtp.gmail.com"
EMAIL_SMTP_PORT="587"
EMAIL_USER="your_email@gmail.com"
EMAIL_PASS="your_gmail_app_password_here"

# AWS SES Configuration (Production)
# Uncomment and configure these variables for production deployment
# AWS_SES_REGION="us-east-1"
# AWS_SES_ACCESS_KEY_ID="your_aws_access_key"
# AWS_SES_SECRET_ACCESS_KEY="your_aws_secret_key"

# Notification Settings
EMAIL_FROM_NAME="Crosswind Flight Scheduling"
EMAIL_FROM_ADDRESS="noreply@crosswind.app"

# NextAuth Configuration
NEXTAUTH_SECRET="your_nextauth_secret_here_change_in_production"
NEXTAUTH_URL="http://localhost:3000"

# Development Settings
DEBUG=true

# Additional Security
JWT_SECRET="your_jwt_secret_for_authentication"